@{
	ViewData["Title"] = "Settings CRUD";
}

@section Scripts{
    <!-- Page level custom scripts -->
    <script src="~/admin/js/demo/datatables-demo.js"></script>
}

@model AdminSettingVM

<!-- Begin Page Content -->
<div class="container-fluid">

    @* <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Tables</h1>
    <p class="mb-4">
    DataTables is a third party plugin that is used to generate the demo table below.
    For more information about DataTables, please visit the <a target="_blank"
    href="https://datatables.net">official DataTables documentation</a>.
    </p> *@

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Settings Table</h6>
            <a asp-action="Update" class="btn btn-outline-info">Update</a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" width="100%" cellspacing="0">
                    <tbody>
                        <tr>
                            <td>ContactNumber: @Model.PhoneNumber</td>
                        </tr>
                        <tr>
                            <td>Email: @Model.ContactEmail</td>
                        </tr>
                        <tr>
                            <td>Street: @Model.Street</td>
                        </tr>
                        <tr>
                            <td>City: @Model.City</td>
                        </tr>
                        <tr>
                            <td>State: @Model.State</td>
                        </tr>
                        <tr>
                            <td>About: @Model.About</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>
<!-- /.container-fluid -->